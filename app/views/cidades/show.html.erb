<%- model_class = Cidade -%>
<div class="page-header">
  <h1><%=t '.title', :default => Cidade %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cidade_nome) %></dt>
      <dd><pre class="prettyprint"><%= @cidade.cidade_nome %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:estado_long) %></dt>
      <dd><pre class="prettyprint"><%= @cidade.estado_long %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:estado_short) %></dt>
      <dd><pre class="prettyprint"><%= @cidade.estado_short %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              cidades_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cidade_path(@cidade), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cidade_path(@cidade),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

