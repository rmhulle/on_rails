<h1>Listing cidades</h1>

<table>
  <thead>
    <tr>
      <th>Cidade nome</th>
      <th>Estado long</th>
      <th>Estado short</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cidades.each do |cidade| %>
      <tr>
        <td><%= cidade.cidade_nome %></td>
        <td><%= cidade.estado_long %></td>
        <td><%= cidade.estado_short %></td>
        <td><%= link_to 'Show', cidade %></td>
        <td><%= link_to 'Edit', edit_cidade_path(cidade) %></td>
        <td><%= link_to 'Destroy', cidade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cidade', new_cidade_path %>
