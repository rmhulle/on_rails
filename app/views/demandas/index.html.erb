<%- model_class = Demanda -%>
<div class="page-header">
  <h1><%=t '.title', :default => Demanda %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:descricao) %></th>
      <th><%= model_class.human_attribute_name(:validade) %></th>
      <th><%= model_class.human_attribute_name(:cidade_origem) %></th>
      <th><%= model_class.human_attribute_name(:correspondente) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @demandas.each do |demanda| %>
      <tr>
        <td><%= demanda.id %></td>
        <td><%= demanda.descricao %></td>
        <td><%= demanda.validade %></td>
        <td><%= demanda.cidade_origem %></td>
        <td><%= demanda.correspondente %></td>
        <td><%= demanda.status %></td>
        <td><%=l demanda.created_at, format: :long %></td>
        <td>
          <%= link_to demanda_path(demanda), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to demanda_path(demanda), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_demanda_path,
            :class => 'btn btn-primary' %>
