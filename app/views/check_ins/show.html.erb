<%- model_class = CheckIn -%>
<div class="page-header">
  <h1><%=t '.title', :default => CheckIn %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:descricao) %></dt>
      <dd><pre class="prettyprint"><%= @check_in.descricao %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:detalhes) %></dt>
      <dd><pre class="prettyprint"><%= @check_in.detalhes %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:validade) %></dt>
      <dd><pre class="prettyprint"><%= @check_in.validade %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              check_ins_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_check_in_path(@check_in), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              check_in_path(@check_in),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

